<?xml version="1.0" encoding="utf-8"?>
<project>
	<!-- NMML reference: https://gist.github.com/1763850 -->
	
	<!-- metadata, make sure 'package' is at least 3 segments (ie. com.mycompany.myproject) -->
	<meta title="School Jammers" package="com.nekith.schooljammers" version="1.0.0" company="Errant Works" />
	
	<!-- output -->
	<app main="jammers.Main" file="SchoolJammers" path="bin" />
	
	<window background="#A8D090" fps="60" />
	<window width="160" height="144" unless="mobile" />
	<window orientation="landscape" vsync="false" antialiasing="0" if="cpp" />
	
	<!-- classpath, haxe libs -->
	<source path="src" />
	<haxelib name="openfl" />
	<haxelib name="actuate" />
	
	<!-- assets -->
	<icon path="assets/openfl.svg" />
    <assets path="assets" />
	
	<!-- optimize output
	<haxeflag name="-dce full" /> -->
	
</project>